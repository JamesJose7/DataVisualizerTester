<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jeeps.datavisualizer.DisplaySensorData"
    tools:showIn="@layout/activity_display_sensor_data">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/humidity_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/varela_round"
                    android:text="Humedad"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/humidity_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/varela_round"
                        android:text="0%"
                        android:textSize="25sp"
                        tools:text="100%"/>

                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/drop"/>
                </LinearLayout>

                <com.hookedonplay.decoviewlib.DecoView
                    android:id="@+id/humidity_decoview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="30dp"/>

            </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/temp_layout"
                android:layout_below="@id/humidity_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/varela_round"
                    android:text="Temperatura"/>

                <RelativeLayout
                    android:id="@+id/temperature_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="40dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/thermometer_image"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/thermometer"/>


                        <TextView
                            android:id="@+id/current_temp_text"
                            android:layout_width="60dp"
                            android:layout_height="80dp"
                            android:gravity="center_vertical"
                            android:textSize="25sp"
                            android:text="0&#176;"/>



                    </LinearLayout>


                </RelativeLayout>

                <com.db.chart.view.LineChartView
                    xmlns:chart="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/week_temp_linechart"
                    android:layout_width="match_parent"
                    android:layout_below="@id/temperature_layout"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"/>

                <com.db.chart.view.HorizontalBarChartView
                    xmlns:chart="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/week_temp_barchart"
                    android:layout_below="@id/week_temp_linechart"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

            </RelativeLayout>

            </android.support.v7.widget.CardView>


        </RelativeLayout>



    </ScrollView>


</RelativeLayout>
