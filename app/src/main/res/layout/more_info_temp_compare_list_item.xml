<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">

    <RelativeLayout
        android:id="@+id/day1_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="#55c5c5c5"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="15dp"
        android:paddingEnd="5dp">

        <LinearLayout
            android:id="@+id/day1_description_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="9dp">

            <TextView
                android:id="@+id/temp_item_main_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="10sp"
                android:text="@string/day"/>

            <TextView
                android:id="@+id/temp_item_secondary_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:text="-"/>


        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/day1_description_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="99"
                android:gravity="end">

                <TextView
                    android:id="@+id/temp_item_first_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:paddingEnd="10dp"
                    android:text="11"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/temp_item_image"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/thermometer"/>

        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/day2_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <LinearLayout
            android:id="@+id/day2_description_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="9dp">

            <TextView
                android:id="@+id/temp_item_main_description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="10sp"
                android:text="@string/day"/>

            <TextView
                android:id="@+id/temp_item_secondary_description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:text="-"/>


        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/day2_description_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="99"
                android:gravity="end">

                <TextView
                    android:id="@+id/temp_item_first_value2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:paddingEnd="10dp"
                    android:text="11"/>


            </LinearLayout>

            <ImageView
                android:id="@+id/temp_item_image2"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/thermometer"/>

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>